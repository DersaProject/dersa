@model DIOS.BusinessBase.SysParamAttr

@{
    ViewBag.Title = "Edit";
}

<h2>EditDetail</h2>

@using (Html.BeginForm("SaveDetailEdit", "Config"))
{

    <fieldset>
        <legend>SysParamAttr</legend>
        <div class="editor-label">
            @Html.LabelFor(model => model.name)
        </div>
        <div class="editor-field">
            @Html.ValueFor(model => model.name)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.value)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.value)
            @Html.ValidationMessageFor(model => model.value)
        </div>

        <p>
            @Html.HiddenFor(model => model.sys_param_attr)
            @Html.HiddenFor(model => model.sys_param)
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
