@model DIOS.ObjectLib.Object
@using DIOS.Common.Interfaces;

@{
//ViewBag.Title = (model => model.ClassName);
}

<h2>Edit</h2>

@using (Html.BeginForm("SaveEditObject", "Config"))
{
    <fieldset>
        <legend>@Model.ClassName</legend>

        @foreach (IParameter par in @Model.GetParameters(null))
        {
            if (Model.IsFieldDisplayed(par.Name))
            {
        <div class="editor-label">
            @Html.ValueFor(model => par.Name)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => par.Value, "string")
        </div>
            }
        }
        <p><hr/>
            @Html.HiddenFor(model => model.id)
            <input type="submit" value="Save" />
        </p>
        
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
